{
  "name": "Genesis OS Bridge v7",
  "id": "genesis-os-bridge-v7",
  "version": "0.7.0",
  "description": "OpenClaw Bridge for the Genesis Core OS. Connects to the local Kernel.",
  "main": "dist/index.js",
  "entry": "index.ts",
  "author": "Genesis Core Team",
  "configSchema": {
    "type": "object",
    "properties": {
      "kernelUrl": {
        "type": "string",
        "default": "http://localhost:5000",
        "description": "The URL of the Genesis Core Kernel REST API."
      },
      "eventBusEnabled": {
        "type": "boolean",
        "default": false,
        "description": "Enable WebSocket connection to Event Bus (2026.2.26 feature)."
      },
      "macConfig": {
        "type": "object",
        "properties": {
          "fallbackToPersona": {
            "type": "boolean",
            "default": true
          },
          "routingConfidenceThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.7
          }
        }
      }
    }
  }
}
